{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["src/**/*.ts"],
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "skipLibCheck": true
    }
}
